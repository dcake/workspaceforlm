<!DOCTYPE html>
<html lang="en" class="feedback">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<title></title>

		<link rel="stylesheet" type="text/css" href="../css/mui.css" />
		<link rel="stylesheet" type="text/css" href="../css/feedback.css" />
		<link rel="stylesheet" type="text/css" href="../css/style.css" />
		<link rel="stylesheet" type="text/css" href="../css/iconfont.css">
		<style>
			.popupbox .popup,
			.popupbox1 .popup {
				width: 100%;
				background: #fff;
				position: fixed;
				bottom: 0;
			}
			
			.popupbox .mui-popup-title {
				padding-top: 10px;
				font-size: 16px;
				color: #666;
				font-weight: normal;
				text-align: left;
				margin-bottom: 10px;
			}
			
			.popupbox .mui-popup-cont button {
				width: 19%;
				margin: 2%;
				height: 34px;
			}
			
			.mui-btn {
				background-color: #efeff4;
				color: #333;
			}
			
			.mui-popup-button:first-child:last-child {
				border-radius: 6px 6px 6px 6px;
				margin: 0 20px;
			}
			
			.mui-popup-button {
				font-size: 17px;
				line-height: 44px;
				position: relative;
				width: 100%;
				height: 44px;
				padding: 0 5px;
				text-align: center;
				color: #f7f7f7;
				background: #1dacf9;
			}
			
			.popupbox .mui-popup-buttons,
			.popupbox1 .mui-popup-buttons {
				border-top: 0px solid #ddd;
				margin-bottom: 11px;
				clear: both;
			}
			
			.popupbox .mui-popup-cont {
				padding: 10px;
				margin-bottom: 10px;
			}
			
			.mui-table-view-cell.mui-active {
				background-color: #fff;
			}
			
			.fbhy {
				color: #fff;
				line-height: 44px;
				font-size: 14px;
			}
			
			.bz label {
				width: 20%;
			}
			
			.xx-add label {
				float: left;
				width: 25%;
			}
			
			.xx-add textarea {
				float: left;
				width: 60%;
				border: none;
				padding: 0;
			}
			
			li.xx-add span {
				float: right;
				width: 5%;
			}
			
			.bx-bt span {
				float: right;
			}
			
			.mui-radio.mui-left label {
				padding-left: 48px;
			}
			
			.mui-radio.mui-left input[type='radio'] {
				left: 10px;
			}
			
			.icon-weizhi {
				font-size: 20px;
			}
			/*地址弹出框*/
			
			#city {
				width: 80%;
				margin-bottom: 0;
				border: none;
				height: 30px;
				padding: 5px 10px;
			}
			
			._citys {
				background: #fff;
				position: relative;
			}
			
			._citys0 {
				margin: 0;
				padding: 0;
				border-bottom: 2px solid #1dacf9;
			}
			
			._citys0 li {
				width: 30%;
				height: 40px;
				line-height: 40px;
				font-size: 16px;
				display: inline-block;
				text-align: center;
			}
			
			._citys0 .citySel {
				background: #1dacf9;
				color: #fff;
			}
			
			#cColse {
				width: 18px;
				height: 18px;
				text-align: center;
				line-height: 14px;
				color: #1dacf9;
				position: absolute;
				right: 10px;
				top: 12px;
				border: 1px solid #1dacf9;
				border-radius: 4px;
			}
			
			._citys1 {
				overflow: hidden;
				padding-bottom: 10px;
			}
			
			._citys1 a {
				width: 23%;
				height: 35px;
				float: left;
				background-color: #f5f5f5;
				color: #666;
				margin: 5px 1% 0;
				line-height: 35px;
				text-align: center;
				cursor: pointer;
				font-size: 15px;
				overflow: hidden;
			}
		</style>
	</head>

	<body>
		<div id="sendInfo">
			<header class="mui-bar mui-bar-nav">
				<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
				<h1 class="mui-title">发货信息</h1>
				<a @click="oftenAddress" class="mui-pull-right fbhy goods">常发货源</a>
			</header>
			<div class="mui-content">
				<div class="add-con">
					<ul class="mui-table-view">
						<li class="mui-table-view-cell">
							<div class="bz">
								<label>发货人</label>
								<input id="name" type="text" maxlength="15" placeholder="请输入发货人名称" />
							</div>
						</li>
						<li class="mui-table-view-cell">
							<div class="bz">
								<label>联系方式</label>
								<input id="phoneNum" type="text" maxlength="15" placeholder="请输入联系电话" />
							</div>
						</li>
						<li class="mui-table-view-cell" style="line-height: 30px;">
							<a class="mui-navigate-right">
								<label style="width: 20%;float: left;">发货地址</label>
								<input readonly="readonly" type="text" id="city" placeholder="请选择发货地" />
							</a>
						</li>
						<li class="mui-table-view-cell xx-add">
							<label style="width: 23%;">详细地址</label>
							<textarea id="detaileAddress" maxlength="20" placeholder="请填写详细地址  街道名/单位名"></textarea>
							<span @click="getLocation" class="iconfont icon-weizhi"></span>
						</li>
					</ul>
				</div>
				<div class="but-box">
					<button class="queren" @click="save" type="button">保存</button>
				</div>
			</div>
		</div>
		<!--弹窗-选择常发货源 -->
		<div id="selectOftenAddress" class="popupbox mui-backdrop">
			<div class="popup">
				<div class="mui-popup-cont">
					<div class="mui-popup-title">
						<div v-for="oftenVal in oftenAddressData" class="mui-input-row mui-radio mui-left">
							<label class="bx-bt">
								<span>{{oftenVal.createDate}}</span>{{oftenVal.goodsType}}  {{oftenVal.shipperArea}}——{{oftenVal.reciverArea}}
							</label>
							<input name="rideo1" type="radio">
						</div>
					</div>
				</div>
				<div class="mui-popup-buttons">
					<span class="mui-popup-button mui-popup-button-bold">确定</span>
				</div>
			</div>
		</div>
		<!-- -->
	</body>
	<script src="../js/mui.js"></script>
	<script src="../js/jquery.js"></script>
	<script src="../js/alertinfo.js"></script>
	<script src="../js/Popt.js"></script>
	<script src="../js/cityJson2.js"></script>
	<script src="../js/citySet.js"></script>
	<script src="../js/base.js"></script>
	<script src="../js/vue.js"></script>
	<script type="text/javascript" charset="utf-8">
		mui.init({
			swipeBack: true //启用右滑关闭功能
		});
		var send = new Vue({
			el: '#sendInfo',
			data: {
				userInfo: getUser().userInfo,
			},
			mounted: function() {
				printlog("用户信息==" + JSON.stringify(this.userInfo))
				this.getAddressSelect();
			},
			methods: {
				/**
				 * 李留新
				 * 2017-09-11
				 * 获取省市区(县)地址
				 */
				getAddressSelect: function() {
					//获取省市
					AjaxSend('mobileShip/findGeoInfoList', {
						type: "2"
					}, 'POST', function(result) {
						printlog("获取省市结果==" + JSON.stringify(result));
						if(result.status) {
							province = result.data;
						}
					});
					//获取区(县)
					AjaxSend('mobileShip/findGeoInfoList', {
						type: "4"
					}, 'POST', function(result) {
						printlog("获取区(县)结果==" + JSON.stringify(result));
						if(result.status) {
							area = result.data;
						}
					});
				},
				/**
				 * 李留新
				 * 2017-09-07
				 * 保存发货地址信息
				 */
				save: function() {
					var name = document.getElementById("name").value.trim(); //发货人
					var phoneNum = document.getElementById("phoneNum").value.trim(); //联系方式
					var cityAddress = document.getElementById("city").value.trim(); //省市区地址
					var detaileAddress = document.getElementById("detaileAddress").value.trim(); //详细地址
					if(name == "") {
						mui.toast('请填写发货人');
						return;
					}
					if(phoneNum == "") {
						mui.toast('请填写联系方式');
						return;
					}
					if(checkPhone(phoneNum) == false && checkTel(phoneNum) == false) {
						mui.toast('请填写正确联系方式');
						return;
					}
					if(cityAddress == "") {
						mui.toast('请填写发货地址');
						return;
					}
					if(detaileAddress == "") {
						mui.toast('请填写发货详细地址');
						return;
					}
					var sendAddress = {
						name: name,
						phoneNum: phoneNum,
						cityAddress: cityAddress,
						detaileAddress: detaileAddress
					}
					printlog("发货信息==" + JSON.stringify(sendAddress))
					mui.plusReady(function() {
						var addHw = plus.webview.getWebviewById('add-hw.html');
						mui.fire(addHw, 'addSendInfo', {
							sendAddressInfo: sendAddress
						});
						mui.back();
					})
				},
				getLocation: function() {
					plus.geolocation.getCurrentPosition(function(position) {
						var detaileAddress = document.getElementById("detaileAddress"); //详细地址
						var currentLocation = position.addresses;
						if(currentLocation.indexOf("区") >= 0) {
							detaileAddress.value = currentLocation.split("区")[1];
							printlog("截取区定位信息==" + detaileAddress.value)
						} else if(currentLocation.indexOf("县") >= 0) {
							detaileAddress.value = currentLocation.split("县")[1];
							printlog("截取县定位信息==" + detaileAddress.value)
						}
					}, function(e) {
						mui.toast('定位失败,请检查网络连接是否正常或者GPS是否打开');
					});
				},
				oftenAddress: function() {
					var param = {
						//userId:this.userInfo.id
						userId: "e07a34e723ec4333babf6db66dbc3ebc" //测试用户id
					}
					AjaxSend('mobileShip/findShipperList', param, 'POST', function(result) {
						printlog("搜索常发货源结果==" + JSON.stringify(result))
						if(result.status) {
							//截取日期
							for(var i = 0; i < result.data.length; i++) {
								result.data[i].createDate = result.data[i].createDate.substring(0, 10)
								var sendAddress = result.data[i].shipperArea.split("省");
								result.data[i].shipperArea = sendAddress[0] + " " + sendAddress[1].split("市")[0];
								var receiveAddress = result.data[i].reciverArea.split("省");
								result.data[i].reciverArea = receiveAddress[0] + " " + receiveAddress[1].split("市")[0];
							}
							oftenAddress.oftenAddressData = result.data
						}
					})
				}

			}
		}) //vue
		var oftenAddress = new Vue({
			el: '#selectOftenAddress',
			data: {
				oftenAddressData: []
			},
			methods: {

			}
		})
		//地址选择样式设置
		var oW = (window.innerWidth > 0) ? window.innerWidth : screen.width;
		var oH = (window.innerHeight > 0) ? window.innerHeight : screen.height;
		$("#city").click(function(e) {
			SelCity(this, e);
			$("._citys").css("width", oW)
			$("._citys").css("height", oH - 199 + 'px')
			$("#PoPy").css("width", oW)
			$("#PoPy").css("left", 0)
		});

		//选择常发货源
		$(".popupbox").hide();
		$(".goods").click(
			function() {
				$(".popupbox").show();
			}
		);
		//结束
		$(".mui-popup-buttons span").click(
			function() {
				$(".popupbox").hide();
			}
		)
		//选择班级
		$('.mui-popup-cont .mui-btn').click(function() {
			$(this).addClass('mui-btn-primary').removeClass('mui-btn').siblings().removeClass('mui-btn-primary').addClass('mui-btn');
		})
	</script>

</html>